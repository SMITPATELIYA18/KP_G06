# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#POST     /                           controllers.IndexPageController.index(request: Request)
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /issues/*repoName			controllers.IssueController.getIssueStat(repoName: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)

#Repository Profile Controller
GET     /repositoryProfile/:username/:repositoryName		    controllers.RepositoryProfileController.getRepositoryProfile(username: String, repositoryName: String)

GET     /topics/:topic              controllers.TopicController.getTopicRepository(topic:String)

# User profile routes
GET 	/user-profile/:username		controllers.UserProfileController.getUserProfile(username: String)


GET     /                      controllers.IndexPageController.index(request: Request)