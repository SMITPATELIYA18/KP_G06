# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Search repository feature route(s):
GET     /                      controllers.GitterificController.index(search: String ?= "")

# User profile feature route(s):
GET 	/user-profile/:username		controllers.GitterificController.getUserProfile(username: String)

# Repository profile feature route(s):
GET     /repositoryProfile/:username/:repositoryName		    controllers.GitterificController.getRepositoryProfile(username: String, repositoryName: String)

# Repository issues feature route(s):
GET     /issues/*repoName			controllers.GitterificController.getIssueStat(repoName: String)

# Tpoics feature route(s):
GET     /topics/:topic              controllers.GitterificController.getTopicRepository(topic:String)

# Map static resources from the /public folder to the /assets URL path:
GET     /assets/*file               controllers.Assets.versioned(file)




